---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import HeaderLink from "../components/HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <p>
        Free form word vomit of <HeaderLink href="/about">
          <b>Eror Saini</b>
        </HeaderLink>, developer and enterpreneur. This <HeaderLink
          href="/blog"
        >
          <b>blog</b>
        </HeaderLink> is a challange to myself to write more and, for the sake of
        posterity, document my thoughts and ideas.
      </p>
      <Header title={SITE_TITLE} />
    </main>
